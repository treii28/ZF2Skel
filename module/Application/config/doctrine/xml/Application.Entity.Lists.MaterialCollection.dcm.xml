<?xml version="1.0" encoding="utf-8"?>
<doctrine-mapping xmlns="http://doctrine-project.org/schemas/orm/doctrine-mapping" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://doctrine-project.org/schemas/orm/doctrine-mapping http://doctrine-project.org/schemas/orm/doctrine-mapping.xsd">
  <entity name="Application\Entity\Lists\MaterialCollection" table="ListXref">

    <unique-constraints>
      <unique-constraint columns="ListId,MemberId" name="ListMember_idx" />
    </unique-constraints>

    <id name="listXrefId" type="integer" column="listXrefId">
      <generator strategy="IDENTITY"/>
    </id>
    <field name="MaterialId" type="integer" column="MemberId" nullable="false">
      <options>
        <option name="unsigned">true</option>
      </options>
    </field>
    <many-to-one field="list" target-entity="Application\Entity\Lists">
      <join-columns>
        <join-column name="ListId" referenced-column-name="ListId"/>
      </join-columns>
    </many-to-one>
    <many-to-many field="materials" target-entity="Application\Entity\Materials">
      <cascade>
        <cascade-all/>
      </cascade>
      <join-table name="Materials">
        <join-columns>
          <join-column name="ListId" referenced-column-name="ListId" nullable="false" unique="false" />
        </join-columns>
        <inverse-join-columns>
          <join-column name="MemberId" referenced-column-name="MaterialId" column-definition="INT NULL" />
        </inverse-join-columns>
      </join-table>
    </many-to-many>
  </entity>
</doctrine-mapping>
